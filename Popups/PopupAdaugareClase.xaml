        <StackLayout Margin="10, 15,10,10" Spacing="5" Orientation="Vertical">
            <Label TextColor="#EEEEEE" Text="NumÄƒrul de clase disponibile" FontFamily="Robo" HorizontalOptions="Center"/>
            
