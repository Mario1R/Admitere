                <BoxView StyleClass="Divider" Grid.Row="0" Grid.Column="0"/>
                <Image Source="safety_divider_0fill_300weight.png" Grid.Row="0" Grid.Column="1">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Tapped="Tranzitie"/>
                    </Image.GestureRecognizers>
